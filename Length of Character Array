//Mine Code
#include<iostream>
using namespace std;
int main(){
    system("CLS");
    char ch[20];
    cout<<"Enter name: ";

    cin>>ch;
    cout<<"Name is: "<<ch<<"\n";
    int count=0;
    for(int i=1; i<20; i++){
        if(ch[i]!='\0'){
            count++;
        }
    }
    
    cout<<"The length is: "<<count;
    

    return 0;
}


