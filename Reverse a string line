#include<iostream>
#include<cstring>
using namespace std;

void reverse(char n[], int m){
    for(int i=m-1; i>=0;i--){
        cout<<n[i]<<" ";        // Here We play with index e.g. At index n[5]= n; if name is Salman
    }
    cout<<endl;
}

int main(){
    system("CLS");
    char ch[20];
    cout<<"Enter a name: ";
    cin>>ch;
    int length=strlen(ch);
    cout<<"The name in reverse order is: ";
    reverse(ch,length);
    cout<<endl;

    return 0;
}
